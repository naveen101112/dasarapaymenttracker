<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DasaraPaymentTracker</title>

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .page-title { font-weight: 700; }
        .table-sticky thead th { position: sticky; top: 0; z-index: 2; background: #f8f9fa; }
        .name-col { position: sticky; left: 0; z-index: 3; background: white; white-space: nowrap; }
        .table-sticky thead th.name-col { z-index: 4; background: #f8f9fa; }
        .checkbox-cell { width: 80px; min-width: 80px; text-align: center; }
        /*.month-col { white-space: nowrap; }*/
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-semibold" asp-page="/Peers">DasaraPaymentTracker</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample"
                    aria-controls="navbarsExample" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Peers">Peers</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-light small">Hi, @User.Identity.Name</span>
                        <a class="btn btn-outline-light btn-sm" href="/Logout">Logout</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="border-top py-3">
    <div class="container text-muted small">
        © @DateTime.Now.Year DasaraPaymentTracker
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
