@page
@model dasarapaymenttracker.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
    <div>
        <h3 class="page-title mb-0">Peer: @Model.PeerName</h3>
        <div class="text-muted small">
            Payments from <b>Oct 2025</b> to <b>Sep 2026</b>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary btn-sm" asp-page="/Peers">Change Peer</a>
        <a class="btn btn-outline-secondary btn-sm" href="/Logout">Logout</a>
    </div>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body p-4">
        <div class="row g-3 align-items-end">
            <div class="col-12 col-lg-6">
                <h5 class="mb-2">Add Name</h5>
                <form method="post" asp-page-handler="AddPerson" class="row g-2">
                    <input type="hidden" name="peerId" value="@Model.PeerId" />
                    <div class="col-12 col-md-8">
                        <input name="personName" class="form-control" placeholder="Enter Name" required />
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-success w-100">Add</button>
                    </div>
                </form>
            </div>

            <div class="col-12 col-lg-6">
                <h5 class="mb-2">Lock rule</h5>
                <div class="text-muted small">
                    If today is after <b>15th</b>, the <b>previous month</b> becomes locked (disabled).
                    @if (Model.LockedMonthLabel != null)
                    {
                        <span class="badge text-bg-danger ms-2">Locked: @Model.LockedMonthLabel</span>
                    }
                    else
                    {
                        <span class="badge text-bg-success ms-2">No month locked</span>
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Message))
        {
            <div class="alert alert-success py-2 mt-3 mb-0">@Model.Message</div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Error))
        {
            <div class="alert alert-danger py-2 mt-3 mb-0">@Model.Error</div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive" style="max-height: 70vh;">
            <table class="table table-striped table-hover mb-0 table-sticky">
                <thead>
                <tr>
                    <th class="name-col">Name</th>
                    @foreach (var m in Model.Months)
                    {
                        <th class="month-col text-center">
                            @m.Label
                            @if (m.IsLocked)
                            {
                                <div><span class="badge text-bg-danger">Locked</span></div>
                            }
                        </th>
                    }
                </tr>
                </thead>
                <tbody>
                @if (Model.Rows.Count == 0)
                {
                    <tr>
                        <td class="p-4 text-muted" colspan="@(1 + Model.Months.Count)">
                            No names under this peer. Add a name to start tracking payments.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td class="name-col fw-semibold">@row.PersonName</td>
                            @foreach (var cell in row.Cells)
                            {
                                <td class="checkbox-cell">
                                    <form method="post" asp-page-handler="TogglePayment" class="m-0">
                                        <input type="hidden" name="peerId" value="@Model.PeerId" />
                                        <input type="hidden" name="personId" value="@row.PersonId" />
                                        <input type="hidden" name="payMonthId" value="@cell.PayMonthId" />
                                        <input type="hidden" name="newValue" value="@(!cell.IsPaid)" />

                                        <div class="form-check d-flex justify-content-center m-0">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   @(cell.IsPaid ? "checked" : "")
                                                   @(cell.IsLocked ? "disabled" : "")
                                                   onchange="this.form.submit();" />
                                        </div>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
