@page
@model dasarapaymenttracker.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h3 class="page-title mb-3">Login</h3>
                <p class="text-muted small mb-4">Use the hardcoded credentials to continue.</p>

                @if (!string.IsNullOrWhiteSpace(Model.Error))
                {
                    <div class="alert alert-danger py-2">@Model.Error</div>
                }

                <form method="post" class="vstack gap-3">
                    <div>
                        <label class="form-label">Username</label>
                        <input asp-for="Username" class="form-control" placeholder="admin" />
                    </div>

                    <div>
                        <label class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Admin@123" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign in</button>
                </form>
            </div>
        </div>
        <div class="text-center text-muted small mt-3">
            Default: <span class="fw-semibold">admin / Admin@123</span>
        </div>
    </div>
</div>
